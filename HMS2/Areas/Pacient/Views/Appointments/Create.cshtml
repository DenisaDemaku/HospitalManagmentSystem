@model HMS2.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<hr />
<h5>Appointment</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label"></label>
                <select asp-for="DoctorId" class ="form-control" asp-items="ViewBag.DoctorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateOfAppointment" class="control-label"></label>
                <input asp-for="DateOfAppointment" class="form-control" />
                <span asp-validation-for="DateOfAppointment" class="text-danger"></span>
            </div>
            <div class="form-group form-check" style="display:none">
                <label class="form-check-label btn btn-outline-info">
                    Do you confirm your appointment?  <br /><input disabled class="form-check-input " asp-for="ConfirmationStatus" /><br />
                </label>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="AuthorId" class="control-label"></label>
                <select disabled asp-for="AuthorId" class ="form-control" asp-items="ViewBag.AuthorId"></select>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="CreatedBy" class="control-label"></label>
                <input disabled asp-for="CreatedBy" class="form-control" />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="CreatedDate" class="control-label"></label>
                <input disabled asp-for="CreatedDate" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="UpdatedBy" class="control-label"></label>
                <input disabled asp-for="UpdatedBy" class="form-control" />
                <span asp-validation-for="UpdatedBy" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="UpdatedDate" class="control-label"></label>
                <input disabled asp-for="UpdatedDate" class="form-control" />
                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index" class="btn btn-outline-danger">Back to List</a>
</div>

